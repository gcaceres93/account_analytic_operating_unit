<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="account_invoice_line_operating_unit_inh" model="ir.ui.view">
            <field name="name">account.invoice.line.operating.inh</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_analytic_id']" position="before">
                    <field name="operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="account_invoice_line_cust_operating_unit_inh" model="ir.ui.view">
            <field name="name">account.invoice.line.cust.operating.inh</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_analytic_id']" position="before">
                    <field name="operating_unit"/>
                </xpath>
            </field>
        </record>
</odoo>